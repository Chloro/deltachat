# mongod.conf
# Where and how to store data.
storage:
  dbPath: /home/node/Desktop/MTG_Detect/database/data
  journal:
    enabled: true
# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /home/node/Desktop/MTG_Detect/database/log/mongod.log
# network interfaces
net:
  port: 27017
  bindIp: 127.0.0.1

